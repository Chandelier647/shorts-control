{
    "manifest_version": 3,
    "web_accessible_resources": [
        {
          "resources": ["sites/instagram/inject.js"],
          "matches": ["*://*.instagram.com/*"]
        }
      ],
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",
    
    "developer": {
        "name": "Chandelier 647",
        "url": "https://chandelier647.com"
    },
    
    "host_permissions": [
        "https://www.instagram.com/*",
        "https://www.youtube.com/*",
        "https://www.facebook.com/*"
    ],

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [{
        "js": [ "shared.js", "sites/instagram/content.js"],
        "matches": [ "*://www.instagram.com/*" ],
        "run_at": "document_start"
    },
        {
            "js": [ "shared.js", "sites/youtube/content.js"],
            "matches": [ "*://www.youtube.com/*" ],
            "run_at": "document_start"
        },
        {
            "js": [ "shared.js", "sites/facebook/content.js"],
            "matches": [ "*://www.facebook.com/*" ],
            "run_at": "document_start"
        },
    ],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/toolbar-icon.svg"
    },

    "permissions": ["scripting", "storage", "nativeMessaging"]
}
